<Window x:Class="AgilityBubble.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AgilityBubble.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="450">

    <Grid HorizontalAlignment="Left" Width="450">
        <Label Content="{Binding Code}"  HorizontalAlignment="Left" Margin="120,53,0,0" VerticalAlignment="Top" Width="265" BorderThickness="1" BorderBrush="Black"/>
        <Button Content="Change code" HorizontalAlignment="Left" Margin="120,118,0,0" VerticalAlignment="Top" Width="75" Command="{Binding ChangeCodeCommand, Mode=OneWay}"/>
        <Label Content="Code:" HorizontalAlignment="Left" Height="26" Margin="46,53,0,0" VerticalAlignment="Top" Width="43"/>
    </Grid>
</Window>
